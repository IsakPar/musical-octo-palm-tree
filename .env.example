# Poly-Rust Trading Engine Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# POLYMARKET API CREDENTIALS (REQUIRED)
# =============================================================================
# Your Polymarket private key (for signing orders)
POLY_PRIVATE_KEY=your_private_key_here

# API credentials from Polymarket CLOB
POLY_API_KEY=your_api_key_here
POLY_API_SECRET=your_api_secret_here

# =============================================================================
# API ENDPOINTS (OPTIONAL - defaults shown)
# =============================================================================
# WebSocket URL for market data
POLY_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# CLOB REST API URL
POLY_CLOB_URL=https://clob.polymarket.com

# =============================================================================
# EXECUTION MODE (RECOMMENDED TO START WITH DRY RUN)
# =============================================================================
# Set to true to simulate trades without executing them
DRY_RUN=true

# =============================================================================
# RISK LIMITS
# =============================================================================
# Maximum position size per token (in shares)
RISK_MAX_POSITION=100

# Maximum notional value per trade (in USD)
RISK_MAX_NOTIONAL=500

# Maximum daily loss before stopping (in USD)
RISK_MAX_DAILY_LOSS=200

# =============================================================================
# SNIPER STRATEGY (Sports Time Arbitrage)
# =============================================================================
# Enable/disable Sniper strategy
SNIPER_ENABLED=true

# Minimum price to buy (don't buy if already expensive)
SNIPER_MIN_PRICE=0.50

# Maximum price to buy (don't overpay)
SNIPER_MAX_PRICE=0.95

# Order size in shares per trade
SNIPER_ORDER_SIZE=10

# Minimum expected profit per share
SNIPER_MIN_PROFIT=0.05

# ESPN poll interval in milliseconds
SNIPER_POLL_MS=1000

# Enabled sports leagues (comma-separated)
SNIPER_LEAGUES=nba,nfl,mlb,nhl

# =============================================================================
# CLIPPER STRATEGY (YES+NO Arbitrage)
# =============================================================================
# Enable/disable Clipper strategy
CLIPPER_ENABLED=true

# Minimum profit per share for arbitrage (after fees)
CLIPPER_MIN_PROFIT=0.01

# Maximum position size per arbitrage trade
CLIPPER_MAX_POSITION=100

# Maximum notional per arbitrage trade
CLIPPER_MAX_NOTIONAL=100

# =============================================================================
# SUMTO100 STRATEGY (Depth-Aware Arbitrage)
# =============================================================================
# Enable/disable SumTo100 strategy
SUMTO100_ENABLED=true

# Minimum edge after fees (0.003 = 0.3%)
SUMTO100_MIN_EDGE=0.003

# Maximum position size per trade
SUMTO100_MAX_POSITION=100

# Maximum notional per trade (USD)
SUMTO100_MAX_NOTIONAL=100

# Minimum liquidity required at VWAP price
SUMTO100_MIN_LIQUIDITY=50

# Total fee rate (both sides, 0.01 = 1%)
SUMTO100_FEE_RATE=0.01

# Paper trading mode (simulate fills without real orders)
SUMTO100_PAPER_TRADING=true

# Maximum order book age in milliseconds (reject stale data)
SUMTO100_MAX_BOOK_AGE_MS=500

# =============================================================================
# LOGGING
# =============================================================================
# Log level: trace, debug, info, warn, error
RUST_LOG=poly_rust=info
